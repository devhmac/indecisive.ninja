<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Voter From</title>

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/Sortable/1.10.2/Sortable.min.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>

</head>

<body>

  <% for (let item of poll) {%>
    <p>
      <%= JSON.stringify(item) %>
    </p>
    <% } %>


      <form id="voterForm" method="POST" action="/polls/:id">
        <input type="text" placeholder="name" name="voter-name">
        <h1>Voting</h1>
        <div class="wrapper">
          <div class="item div1">
            <input class="button" name='choice' value="1" placeholder="THIS IS THE FIRST ITEM">
            <i class="fas fa-bars"></i>
          </div>
          <div class="item div2">
            <input class="button" name='choice' value="2" placeholder="THIS IS THE FIRST ITEM">
            <i class="fas fa-bars"></i>
          </div>
          <div class="item div3">
            <input class="button" name='choice' value="3" placeholder="THIS IS THE FIRST ITEM">
            <i class="fas fa-bars"></i>
          </div>
          <div class="item div4">
            <input class="button" name='choice' value="4" placeholder="THIS IS THE FIRST ITEM">
            <i class="fas fa-bars"></i>
          </div>
          <div class="item div5">
            <input class="button" name='choice' value="5" placeholder="THIS IS THE FIRST ITEM">
            <i class="fas fa-bars"></i>
          </div>
        </div>

        <input type="submit" name="" id="">

        <script>
          const dragArea = document.querySelector(".wrapper");
          new Sortable(dragArea, {
            animation: 350
          });
        </script>


</body>

</html>
